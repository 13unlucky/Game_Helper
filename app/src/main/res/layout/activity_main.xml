<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:id="@+id/pictureButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pictureButton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/countText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/showPictureProcessed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CountButton"
        android:id="@+id/countButton"
        android:singleLine="false"
        android:layout_below="@+id/pictureButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/showPicture"
        android:id="@+id/showPicture"
        android:layout_below="@+id/pictureButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gray"
        android:id="@+id/showPictureGray"
        android:layout_above="@+id/showPicture"
        android:layout_alignRight="@+id/showPictureProcessed"
        android:layout_alignEnd="@+id/showPictureProcessed" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Process"
        android:id="@+id/showPictureProcessed"
        android:layout_below="@+id/showPicture"
        android:layout_alignRight="@+id/showPictureCanny"
        android:layout_alignEnd="@+id/showPictureCanny" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:contentDescription="pictureView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/showPictureProcessed"
        android:layout_below="@+id/countText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Canny"
        android:id="@+id/showPictureCanny"
        android:layout_below="@+id/showPictureGray"
        android:layout_toRightOf="@+id/showPicture"
        android:layout_toEndOf="@+id/showPicture" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blur"
        android:id="@+id/showPictureBlur"
        android:layout_alignTop="@+id/showPictureGray"
        android:layout_toRightOf="@+id/showPictureProcessed"
        android:layout_toEndOf="@+id/showPictureProcessed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Picture Gray"
        android:id="@+id/showPictureGray"
        android:layout_below="@+id/countText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Picture Blur"
        android:id="@+id/showPictureBlur"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Picture Canny"
        android:id="@+id/showPictureCanny"
        android:layout_below="@+id/showPictureBlur"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Picture Processed"
        android:id="@+id/showPictureProcessed"
        android:layout_below="@+id/showPictureCanny"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />

</RelativeLayout>
